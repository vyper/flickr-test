<%= form_tag(root_path, method: :get) do %>
  <div class="form-group">
    <div class="input-group">
      <%= search_field_tag 'query', params[:query], class: "form-control", placeholder: "Search..." %>
      <span class="input-group-btn">
        <%= button_tag type: 'submit', class: "btn btn-primary" do %>
          <i class="fui-search"></i>
        <% end %>
      </span>
    </div>
  </div>
<% end %>

<div class="container">
  <ul class="row">
  <% params[:query].size.times do %>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4"><img src="http://placehold.it/140x100" class="img-thumbnail" /></li>
  <% end if params.include? :query %>
  </ul>
</div>